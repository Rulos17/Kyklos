<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="@string/ingrese_los_datos"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/et_fecha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:hint="@string/fecha"
                android:inputType="textPersonName"
                android:padding="16dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_lugar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:hint="@string/lugar"
                android:inputType="textPersonName"
                android:padding="16dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_region"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:hint="@string/region"
                android:inputType="text"
                android:padding="16dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_campaÃ±a"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:hint="@string/campa_a"
                android:inputType="text"
                android:padding="16dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_origen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:hint="@string/origen"
                android:inputType="text"
                android:padding="16dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_celularesCantidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Celulares(Cantidad)"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/et_celularesKg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:hint="Celulares(Kg)"
                android:inputType="text"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/et_tabletsCantidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Tablets(Cantidad)"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_tabletsKg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Tablets(Kg)"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_cpuCantidad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="CPU's(Cantidad)"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_cpusKg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="CPU's(Kg)"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_notebooksCantidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Notebooks(Cantidad)"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_notebooksKg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Notebooks(Kg)"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_otrosKg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Otros(Kg)"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btn_enviar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Enviar" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>